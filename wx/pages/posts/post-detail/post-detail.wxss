/* pages/posts/post-detail/post-detail.wxss */
.container{
  display: flex;
  flex-direction: column;
}
/* 顶部图片及音乐*/
.head_image{
  width: 750rpx;
  height: 460rpx;
}
.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6;
}
/* 作者 */
.author_date{
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar{
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}

.author{
  font-size:15px;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}
.const-text{
  font-size: 12px;
  color: #999;
  margin-left: 20rpx;
}
/*文字*/
.title{
  margin-left: 40rpx;
  font-size: 18px;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}
.tool{
  margin-top: 20rpx;
}
.circle_img{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle
}
.circle_img image{
  width: 90rpx;
  height: 90rpx;
}

.share_img{
  margin-left: 30rpx;
}
.horizon{
  width: 660rpx;
  height: 1px;
  background: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}
/* 底部文字  */
.detail{
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  
}








