 /* pages/posts/post-item/post-item.wxss */
/* 推文样式 */
.post_container{
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
  background: #fff;
  border-bottom:1px solid #ededed;
  border-top: 1px solid #ededed;
  padding: 5rpx;
}
.post_author_data{
  margin: 10rpx 0 20rpx 10rpx; /*上右下左*/

}
.post_author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  margin-right: 10px;
}
.post_data{
  margin-top: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 15px;
}

.post_title{
  color: #333;
  font-size: 22px;
  font-weight: bold;
  margin-bottom: 10px;
  margin-left: 10px;
}
.post_img{
  margin-left: 16px;
  width: 100%;
  height: 340rpx;
  margin: 0 auto;
  margin-bottom: 15px;
}
.post_content{
  color:#666;
  font-size: 15px;
  margin-bottom: 20rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx; 
}

.post_like{
  font-size:13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.post_like_img{
  height: 16px;
  width: 16px;
  margin-left:5px;
  vertical-align: middle ;
}

.post_like_font{
  vertical-align: middle;
  margin-right: 20px;
}